@model DrumkitStore.Models.Drumkit

<h2>Edytuj Drumkit</h2>

@using (Html.BeginForm("Edit", "Drumkits", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <label for="Nazwa">Nazwa</label>
        @Html.TextBoxFor(m => m.Nazwa, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Nazwa)
    </div>

    <div class="form-group">
        <label for="Cena">Cena</label>
        @Html.TextBoxFor(m => m.Cena, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Cena)
    </div>

    <div class="form-group">
    <label for="KategoriaId">Kategoria</label>
    @Html.DropDownListFor(
        m => m.KategoriaId,
        new SelectList(ViewBag.Kategorie, "Id", "Nazwa"), 
        new { @class = "form-control" }
    )
    @Html.ValidationMessageFor(m => m.KategoriaId)
</div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a href="@Url.Action("Index", "Drumkits")" class="btn btn-secondary">Anuluj</a>
}