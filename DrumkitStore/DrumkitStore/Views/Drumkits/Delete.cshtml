@model DrumkitStore.Models.Drumkit

<h2>Usuń Drumkit</h2>

<div>
    <h3>Czy na pewno chcesz usunąć drumkit?</h3>
    <dl class="row">
        <dt class="col-sm-2">Nazwa</dt>
        <dd class="col-sm-10">@Model.Nazwa</dd>

        <dt class="col-sm-2">Cena</dt>
        <dd class="col-sm-10">@Model.Cena</dd>

        <dt class="col-sm-2">Kategoria</dt>
        <dd class="col-sm-10">@Model.Kategoria?.Nazwa</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Drumkits", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a href="@Url.Action("Index", "Drumkits")" class="btn btn-secondary">Anuluj</a>
    }
</div>