@model DrumkitStore.Models.User

<h2 class="text-center mt-5">Rejestracja</h2> 

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Register" method="post">
                <div class="form-group">
                    <label for="Email">Adres e-mail</label>
                    <input type="email" id="Email" name="Email" class="form-control" value="@Model?.Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password">Hasło</label>
                    <input type="password" id="Password" name="Password" class="form-control" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-3">Zarejestruj się</button> 
            </form>


            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
            }


            <p class="mt-3 text-center">
                Masz już konto? <a href="@Url.Action("Login", "Account")">Zaloguj się</a>
            </p>
        </div>
    </div>
</div>